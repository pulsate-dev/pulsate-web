{
  "name": "pulsate-web",
  "description": "Pulsate official web client",
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.0",
  "type": "module",
  "license": "Apache-2.0",
  "author": {
    "name": "pulsate-dev",
    "email": "info@pulsate.dev"
  },
  "scripts": {
    "start": "remix-serve ./build/server/index.js",
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "clean": "rm -r ./build",
    "lint": "biome lint ./app/**/*.tsx",
    "format": "biome format --write ./app/**/*.tsx ./i18n/config.ts",
    "check:format": "biome format ./app/**/*.tsx ./i18n/config.ts",
    "typecheck": "tsc",
    "postinstall": "lefthook install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/themes": "^3.1.1",
    "@remix-run/node": "^2.10.3",
    "@remix-run/react": "^2.10.3",
    "@remix-run/serve": "^2.10.3",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "i18next": "^23.12.1",
    "i18next-browser-languagedetector": "^8.0.0",
    "isbot": "^5.1.13",
    "lefthook": "^1.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "^1.6.1",
    "@remix-run/dev": "^2.10.3",
    "@storybook/addon-essentials": "^8.2.4",
    "@storybook/addon-interactions": "^8.2.4",
    "@storybook/addon-links": "^8.2.4",
    "@storybook/addon-onboarding": "^8.2.4",
    "@storybook/blocks": "^8.2.4",
    "@storybook/react": "^8.2.4",
    "@storybook/react-vite": "^8.2.4",
    "@storybook/test": "^8.2.4",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "storybook": "^8.2.4",
    "typescript": "^5.5.3",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^5.0.0"
  }
}
